<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.user.email %><br>
    <strong>>> </strong>
    <%= comment.body %>
  </p>

  <p>
    <% if current_user and current_user.id == comment.user_id%>
      <%= link_to 'Destroy Comment', [comment.article, comment],
              method: :delete,
              data: { confirm: "Are you sure?" } %>
    <% end %>
</p>
  <% end %>
